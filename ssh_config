Host *
  AddKeysToAgent yes
  IdentityFile ~/.ssh/id_rsa

Host crossbeam-bastion
  Hostname bastion.getcrossbeam.com
  User ubuntu
  Port 22
  StrictHostKeyChecking no
  PasswordAuthentication no
  ForwardAgent yes
  ServerAliveInterval 30
  ServerAliveCountMax 3

Host crossbeam-jenkins
  Hostname jenkins.internal.getcrossbeam.com
  User ubuntu
  Port 22
  StrictHostKeyChecking no
  PasswordAuthentication no
  ForwardAgent yes
  ServerAliveInterval 30
  ServerAliveCountMax 3
  ProxyCommand ssh crossbeam-bastion nc %h %p
